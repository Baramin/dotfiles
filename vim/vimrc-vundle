set nocompatible
filetype off

" Install vundle with git clone http://github.com/gmarik/vundle.git ~/.vim/bundle/vundle

if MySys() == "windows"
  set rtp+=$HOME/vimfiles/bundle/vundle/
  call vundle#rc('$HOME/vimfiles/bundle/')
else
  set rtp+=$HOME/.vim/bundle/vundle/
  call vundle#rc()
end

